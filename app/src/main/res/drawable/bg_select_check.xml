<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval">
            <solid android:color="#ffffff"/>
            <stroke
                android:width="0.8dp"
                android:color="#444444"/>
            <size
                android:width="15dp"
                android:height="15dp"/>
        </shape>
    </item>
    <item android:gravity="center">
        <shape
            android:shape="oval">
            <solid android:color="#e98c3b"/>
            <stroke
                android:color="@android:color/transparent"
                android:width="@dimen/gap_5dp">
            </stroke>
        </shape>
    </item>
</layer-list>